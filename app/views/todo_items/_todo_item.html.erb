<div class="rox clearfix">
	<% if todo_item.completed? %>
		<div class="complete">
			<%= link_to "Marquer comme terminé", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
		</div>
		<div class="trash">
			<%= link_to "Supprimer", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: 'Êtes-vous sûr ?'} %>
		</div>
	<% else %>
		<div class="complete">
			<%= link_to "Marquer comme terminé", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
		</div>
		<div class="todo_item">
			<p><%= todo_item.content %></p>
		</div>
		<div class="trash">
			<%= link_to "Supprimer", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: 'Êtes-vous sûr ?'} %>
		</div>
	<% end %>
</div>